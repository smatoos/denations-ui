{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "lib",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es2015"],
    "types": ["node"],
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true
  },
  "exclude": ["dist", "tokens", "node_modules", "dist/**/*.spec.ts"],
  "include": ["lib/**/*"]
}
